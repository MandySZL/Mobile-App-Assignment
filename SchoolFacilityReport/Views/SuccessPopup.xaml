<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="SchoolFacilityReport.Views.SuccessPopup"
               Color="Transparent">

    <Border StrokeThickness="0" StrokeShape="RoundRectangle 20" 
            WidthRequest="300" BackgroundColor="White" Padding="0">
        <Border.Shadow>
            <Shadow Brush="Black" Offset="0,10" Radius="20" Opacity="0.3"/>
        </Border.Shadow>

        <VerticalStackLayout Spacing="20" Padding="30">

            <Label Text="&#x1F389;" FontSize="50" HorizontalOptions="Center"/>
            <Label Text="Welcome Back!" 
                   FontSize="22" FontAttributes="Bold" TextColor="#333" 
                   HorizontalOptions="Center"/>

            <Label x:Name="MessageLabel" 
                   Text="Login successful." 
                   FontSize="14" TextColor="Gray" 
                   HorizontalOptions="Center" HorizontalTextAlignment="Center"/>

            <Border StrokeThickness="0" StrokeShape="RoundRectangle 25" HeightRequest="45" Margin="0,10,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#4A00E0" Offset="0.0" />
                        <GradientStop Color="#8E2DE2" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Label Text="Let's Go" TextColor="White" FontAttributes="Bold" 
                           HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Button BackgroundColor="Transparent" Clicked="OnCloseClicked"/>
                </Grid>
            </Border>

        </VerticalStackLayout>
    </Border>
</toolkit:Popup>