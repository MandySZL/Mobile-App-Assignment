<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="SchoolFacilityReport.Views.StatusSelectPopup"
               Color="Transparent"
               CanBeDismissedByTappingOutsideOfPopup="True">

    <Border StrokeShape="RoundRectangle 24" 
            StrokeThickness="0"
            BackgroundColor="White"
            WidthRequest="300"
            Padding="24">
        <Border.Shadow>
            <Shadow Brush="Black" Offset="0,10" Radius="30" Opacity="0.2"/>
        </Border.Shadow>

        <VerticalStackLayout Spacing="20">
            <Label Text="Update Status" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   TextColor="{StaticResource TextPrimary}"/>

            <VerticalStackLayout Spacing="12">
                <Button Text="Pending" 
                        BackgroundColor="{StaticResource Warning}" 
                        TextColor="White"
                        CornerRadius="14"
                        HeightRequest="44"
                        Clicked="OnStatusClicked"
                        CommandParameter="Pending"/>
                        
                <Button Text="In Progress" 
                        BackgroundColor="{StaticResource Info}" 
                        TextColor="White"
                        CornerRadius="14"
                        HeightRequest="44"
                        Clicked="OnStatusClicked"
                        CommandParameter="In Progress"/>
                        
                <Button Text="Completed" 
                        BackgroundColor="{StaticResource Success}" 
                        TextColor="White"
                        CornerRadius="14"
                        HeightRequest="44"
                        Clicked="OnStatusClicked"
                        CommandParameter="Completed"/>
            </VerticalStackLayout>

            <Button Text="Cancel" 
                    BackgroundColor="Transparent" 
                    TextColor="{StaticResource TextSecondary}"
                    Clicked="OnCancelClicked"/>
        </VerticalStackLayout>
    </Border>

</toolkit:Popup>