<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SchoolFacilityReport.ViewModels"
             x:Class="SchoolFacilityReport.Views.LoginPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource PageBackground}">

    <!-- BindingContext is set in CodeBehind via Dependency Injection -->

    <ScrollView>
        <Grid RowDefinitions="Auto, *" VerticalOptions="FillAndExpand" Padding="30,60,30,30">
            
            <!-- Header Section -->
            <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,40">
                <Image Source="school_logo.png" 
                       x:Name="LogoImage"
                       HeightRequest="100" 
                       WidthRequest="100" 
                       HorizontalOptions="Center" 
                       Margin="0,0,0,20"/>
                       
                <Label Text="Welcome Back!" 
                       Style="{StaticResource Headline}"
                       TextColor="{StaticResource TextPrimary}"
                       FontSize="32"/>
                       
                <Label Text="Sign in to your account" 
                       Style="{StaticResource SubHeadline}"
                       TextColor="{StaticResource TextSecondary}"/>
            </VerticalStackLayout>

            <!-- Login Form -->
            <VerticalStackLayout Grid.Row="1" Spacing="25" VerticalOptions="Center">
                
                <!-- Email Input -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Email Address" TextColor="{StaticResource TextPrimary}" FontAttributes="Bold"/>
                    <Border StrokeShape="RoundRectangle 12" StrokeThickness="0" BackgroundColor="{StaticResource SurfaceAlt}" Padding="0">
                         <Entry Placeholder="Enter your email" 
                                Text="{Binding Email}" 
                                Keyboard="Email"
                                BackgroundColor="Transparent"
                                Margin="15,0"/>
                    </Border>
                </VerticalStackLayout>

                <!-- Password Input -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Password" TextColor="{StaticResource TextPrimary}" FontAttributes="Bold"/>
                    <Border StrokeShape="RoundRectangle 12" StrokeThickness="0" BackgroundColor="{StaticResource SurfaceAlt}" Padding="0">
                        <Entry Placeholder="Enter your password" 
                               Text="{Binding Password}" 
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               Margin="15,0"/>
                    </Border>
                </VerticalStackLayout>
                
                <!-- Login Button -->
                <Button Text="Sign In" 
                        Command="{Binding SignInCommand}" 
                        IsEnabled="{Binding IsNotBusy}"
                        Margin="0,20,0,0"
                        Style="{StaticResource Button}"/>

                <!-- Register Link -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,10,0,0">
                    <Label Text="Don't have an account?" TextColor="{StaticResource TextSecondary}"/>
                    <Label Text="Sign Up" 
                           TextColor="{StaticResource Primary}" 
                           FontAttributes="Bold">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SignUpCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>

                <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                   IsVisible="{Binding IsBusy}"
                                   Color="{StaticResource Primary}"
                                   HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>