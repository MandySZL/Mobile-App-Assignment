<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SchoolFacilityReport.ViewModels"
             xmlns:strings="clr-namespace:SchoolFacilityReport.Resources.Strings;assembly=SchoolFacilityReport"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="SchoolFacilityReport.Views.StudentDashboardPage"
             Title="{x:Static strings:AppResources.ReportTitle}"
             BackgroundColor="#FFFFFF">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="25">

            <Grid ColumnDefinitions="Auto, Auto" ColumnSpacing="10" Margin="-5,10,0,10">
                <Grid Grid.Column="0" 
                      WidthRequest="40" 
                      HeightRequest="40" 
                      BackgroundColor="Transparent"
                      VerticalOptions="Center">
                    <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"
                          Fill="#333"
                          Aspect="Uniform"
                          HeightRequest="28"
                          WidthRequest="28"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoBackCommand}"/>
                    </Grid.GestureRecognizers>
                </Grid>
                
                <Label Grid.Column="1" 
                       Text="{x:Static strings:AppResources.ReportTitle}" 
                       FontSize="28" FontAttributes="Bold" TextColor="#333"
                       VerticalOptions="Center"/>
            </Grid>

            <VerticalStackLayout Spacing="8">
                <Label Text="{x:Static strings:AppResources.CategoryLabel}" FontAttributes="Bold" TextColor="#666"/>
                <Border Stroke="#E0E0E0" StrokeThickness="1" StrokeShape="RoundRectangle 10" BackgroundColor="#FAFAFA" Padding="15,0">
                    <Picker ItemsSource="{Binding Categories}" 
                            SelectedItem="{Binding SelectedCategory}" 
                            Title="Select..."
                            TextColor="#333"
                            TitleColor="#999"/>
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Label Text="{x:Static strings:AppResources.UrgencyLabel}" FontAttributes="Bold" TextColor="#666"/>
                <Border Stroke="#E0E0E0" StrokeThickness="1" StrokeShape="RoundRectangle 10" BackgroundColor="#FAFAFA" Padding="15,0">
                    <Picker ItemsSource="{Binding UrgencyLevels}" 
                            SelectedItem="{Binding SelectedUrgency}" 
                            Title="Select..."
                            TextColor="#333"
                            TitleColor="#999"/>
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Label Text="{x:Static strings:AppResources.DescLabel}" FontAttributes="Bold" TextColor="#666"/>
                <Border Stroke="#E0E0E0" StrokeThickness="1" StrokeShape="RoundRectangle 10" BackgroundColor="#FAFAFA" Padding="15,10">
                    <Editor Text="{Binding Description}" 
                            HeightRequest="120" 
                            Placeholder="{x:Static strings:AppResources.DescPlaceholder}"
                            TextColor="#333"
                            PlaceholderColor="#999"
                            AutoSize="TextChanges"/>
                </Border>
            </VerticalStackLayout>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">

                <Button Grid.Column="0"
                        Text="{x:Static strings:AppResources.PhotoBtn}" 
                        Command="{Binding TakePhotoCommand}" 
                        BackgroundColor="#E3F2FD" 
                        TextColor="#1565C0"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50"/>

                <Button Grid.Column="1"
                        Text="{x:Static strings:AppResources.LocationBtn}" 
                        Command="{Binding GetLocationCommand}" 
                        BackgroundColor="#E8F5E9" 
                        TextColor="#2E7D32"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50"/>
            </Grid>

            <Border StrokeThickness="0" StrokeShape="RoundRectangle 15" 
                    IsVisible="{Binding PhotoPreview, Converter={toolkit:IsNotNullConverter}}"
                    HeightRequest="200" HorizontalOptions="Fill">
                <Image Source="{Binding PhotoPreview}" Aspect="AspectFill"/>
            </Border>

            <Border StrokeThickness="0" StrokeShape="RoundRectangle 25" HeightRequest="55" Margin="0,10,0,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#4A00E0" Offset="0.0" />
                        <GradientStop Color="#8E2DE2" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Shadow>
                    <Shadow Brush="#8E2DE2" Offset="0,8" Radius="15" Opacity="0.4"/>
                </Border.Shadow>

                <Grid>
                    <Label Text="{x:Static strings:AppResources.SubmitBtn}" 
                           TextColor="White" FontAttributes="Bold" FontSize="18" 
                           HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Button BackgroundColor="Transparent" Command="{Binding SubmitReportCommand}"/>
                </Grid>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>