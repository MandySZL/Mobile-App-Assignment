@page "/"
@using WebAdmin.Models
@using Supabase
@using Supabase.Postgrest
@inject Supabase.Client Supabase

<PageTitle>Admin Dashboard</PageTitle>

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Admin Panel</h1>
        
         <button class="btn btn-primary" @onclick="LoadReports">
            <span class="oi oi-reload"></span> Refresh
        </button>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <!-- Stats Overview -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-white bg-primary mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Total Reports</h5>
                        <p class="card-text display-6">@TotalReports</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-danger mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Detailed Attention</h5>
                        <p class="card-text display-6">@UrgentReports</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-dark bg-warning mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Pending</h5>
                        <p class="card-text display-6">@PendingReports</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Completed</h5>
                        <p class="card-text display-6">@CompletedReports</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reports Table -->
        <div class="card shadow">
            <div class="card-header bg-white">
                <h5 class="mb-0">Recent Reports</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Urgency</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (reports == null || !reports.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center py-4 text-muted">No reports found.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var report in reports)
                            {
                                <tr>
                                    <td>
                                        @if (report.Urgency == 3)
                                        {
                                            <span class="badge rounded-pill bg-danger">High</span>
                                        }
                                        else if (report.Urgency == 2)
                                        {
                                            <span class="badge rounded-pill bg-warning text-dark">Medium</span>
                                        }
                                        else
                                        {
                                            <span class="badge rounded-pill bg-secondary">Low</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(report.ImagePath))
                                        {
                                           <a href="@report.ImagePath" target="_blank">
                                                <img src="@report.ImagePath" alt="Img" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;" />
                                           </a>
                                        }
                                        @report.Category
                                    </td>
                                    <td>
                                        <div class="text-truncate" style="max-width: 250px;">
                                            @report.Description
                                        </div>
                                    </td>
                                    <td>@report.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <span class="badge @report.StatusBadgeClass">
                                            @report.Status
                                        </span>
                                    </td>
                                    <td>
                                        <!-- Actions (Placeholder) -->
                                        <button class="btn btn-sm btn-outline-secondary">View</button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@code {
    private List<Report> reports = new();
    private bool isLoading = true;

    private int TotalReports => reports.Count;
    private int UrgentReports => reports.Count(r => r.Urgency == 3 && r.Status != "Completed");
    private int PendingReports => reports.Count(r => r.Status?.ToLower() == "pending");
    private int CompletedReports => reports.Count(r => r.Status?.ToLower() == "completed");

    protected override async Task OnInitializedAsync()
    {
        await LoadReports();
    }

    private async Task LoadReports()
    {
        isLoading = true;
        try
        {
            var response = await Supabase.From<Report>()
                .Order("urgency", Constants.Ordering.Descending)
                .Order("created_at", Constants.Ordering.Descending)
                .Get();
            
            reports = response.Models;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading reports: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
}
