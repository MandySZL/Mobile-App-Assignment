@page "/"
@using SchoolAdminPanel.Models
@using Supabase.Postgrest
@using Microsoft.AspNetCore.Components.Authorization
@inject Supabase.Client Supabase
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Dashboard</PageTitle>

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Admin Dashboard</h1>
        <div>
            <AuthorizeView>
                <Authorized>
                     <span class="me-3">Welcome, @context.User.Identity?.Name</span>
                     <button class="btn btn-outline-danger me-2" @onclick="Logout">Sign Out</button>
                </Authorized>
                <NotAuthorized>
                    <a href="login" class="btn btn-outline-primary me-2">Sign In</a>
                </NotAuthorized>
            </AuthorizeView>
            <button class="btn btn-primary" @onclick="LoadReports">Refresh</button>
        </div>
    </div>

    @if (isLoading)
    {
        <p>Loading...</p>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h3>@TotalReports</h3>
                        <div>Total Reports</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white">
                    <div class="card-body">
                        <h3>@UrgentReports</h3>
                        <div>Urgent</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-dark">
                    <div class="card-body">
                        <h3>@PendingReports</h3>
                        <div>Pending</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h3>@CompletedReports</h3>
                        <div>Completed</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Status</th>
                        <th>Action</th> 
                        <th>Urgency</th>
                        <th>Description</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in reports)
                    {
                        <tr>
                            <td>@item.CreatedAt.ToString("g")</td>
                            <td>@item.Category</td>
                            <td><span class="badge @item.StatusBadgeClass">@item.Status</span></td>
                            <td>
                                <select class="form-select form-select-sm" 
                                        @onchange="@(e => UpdateStatus(item, e.Value?.ToString()))"
                                        value="@item.Status" 
                                        style="width: 130px;">
                                    <option value="Pending">Pending</option>
                                    <option value="In Progress">In Progress</option>
                                    <option value="Completed">Completed</option>
                                    <option value="Rejected">Rejected</option>
                                </select>
                            </td>
                            <td>
                                @if (item.Urgency == 3) { <span class="badge bg-danger">High</span> }
                                else if (item.Urgency == 2) { <span class="badge bg-warning text-dark">Medium</span> }
                                else { <span class="badge bg-secondary">Low</span> }
                            </td>
                            <td>@item.Description</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <a href="@item.ImageUrl" target="_blank">View Image</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<Report> reports = new();
    private bool isLoading = true;

    private int TotalReports => reports.Count;
    private int UrgentReports => reports.Count(r => r.Urgency == 3);
    private int PendingReports => reports.Count(r => r.Status?.ToLower() == "pending");
    private int CompletedReports => reports.Count(r => r.Status?.ToLower() == "completed");

    protected override async Task OnInitializedAsync()
    {
        await LoadReports();
    }

    private async Task LoadReports()
    {
        isLoading = true;
        try
        {
            var response = await Supabase.From<Report>()
                .Order("created_at", Constants.Ordering.Descending)
                .Get();
            reports = response.Models;
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task UpdateStatus(Report item, string? newStatus)
    {
        if (string.IsNullOrEmpty(newStatus) || item.Status == newStatus) return;

        // AUTH CHECK
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        if (!authState.User.Identity.IsAuthenticated)
        {
            // Revert UI change visually if needed (though difficult without binding refresh, simple redirect is better)
            Navigation.NavigateTo("/login");
            return;
        }

        try
        {
            // Update in DB
            var model = await Supabase.From<Report>()
                         .Where(x => x.Id == item.Id)
                         .Set(x => x.Status, newStatus)
                         .Update();

            // Update local state
            item.Status = newStatus;
            
            // Refresh counts
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error updating status: {ex.Message}");
            // Optionally show error to user
        }
    }

    private async Task Logout()
    {
        await Supabase.Auth.SignOut();
        // Notify auth state provider manually if needed, or if Supabase client events are hooked up.
        // For our simple provider, we might need to trigger a refresh or simply reload.
        // Since our provider checks Supabase.Client.Auth.CurrentSession, a re-check does the trick.
        if (AuthStateProvider is SchoolAdminPanel.Providers.SupabaseAuthenticationStateProvider customProvider)
        {
            customProvider.NotifyAuthenticationStateChanged();
        }
        Navigation.NavigateTo("/login");
    }
}
