@page "/"
@using SchoolAdminPanel.Models
@using Supabase.Postgrest
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject Supabase.Client Supabase
@inject IJSRuntime JSRuntime

<PageTitle>Dashboard</PageTitle>

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Admin Dashboard</h1>
        <button class="btn btn-primary" @onclick="LoadReports">Refresh</button>
    </div>

    @if (isLoading)
    {
        <p>Loading...</p>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h3>@TotalReports</h3>
                        <div>Total Reports</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white">
                    <div class="card-body">
                        <h3>@UrgentReports</h3>
                        <div>Urgent</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-dark">
                    <div class="card-body">
                        <h3>@PendingReports</h3>
                        <div>Pending</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h3>@CompletedReports</h3>
                        <div>Completed</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Status</th>
                        <th>Urgency</th>
                        <th>Description</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in reports)
                    {
                        <tr>
                            <td>@item.CreatedAt.ToString("g")</td>
                            <td>@item.Category</td>
                            <td>
                                <select class="form-select form-select-sm" @onchange="@(e => UpdateStatus(item, e.Value?.ToString()))" value="@item.Status">
                                    <option value="Pending">Pending</option>
                                    <option value="In Progress">In Progress</option>
                                    <option value="Completed">Completed</option>
                                    <option value="Rejected">Rejected</option>
                                </select>
                            </td>
                            <td>
                                @if (item.Urgency == 3) { <span class="badge bg-danger">High</span> }
                                else if (item.Urgency == 2) { <span class="badge bg-warning text-dark">Medium</span> }
                                else { <span class="badge bg-secondary">Low</span> }
                            </td>
                            <td>@item.Description</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <a href="@item.ImageUrl" target="_blank">View Image</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<Report> reports = new();
    private bool isLoading = true;

    private int TotalReports => reports.Count;
    private int UrgentReports => reports.Count(r => r.Urgency == 3);
    private int PendingReports => reports.Count(r => r.Status?.ToLower() == "pending");
    private int CompletedReports => reports.Count(r => r.Status?.ToLower() == "completed");

    protected override async Task OnInitializedAsync()
    {
        await LoadReports();
    }

    private async Task LoadReports()
    {
        isLoading = true;
        try
        {
            var response = await Supabase.From<Report>()
                .Order("created_at", Constants.Ordering.Descending)
                .Get();
            reports = response.Models;
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task UpdateStatus(Report report, string? newStatus)
    {
        if (string.IsNullOrEmpty(newStatus) || report.Status == newStatus) return;

        var oldStatus = report.Status;
        report.Status = newStatus; // Optimistic update

        try
        {
            await Supabase.From<Report>()
                .Where(x => x.Id == report.Id)
                .Set(x => x.Status, newStatus)
                .Update();
            
            // Recalculate stats UI by notifying state change if needed, handled by Blazor re-render usually
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error updating status: {ex.Message}");
            report.Status = oldStatus; // Revert on failure
            await JSRuntime.InvokeVoidAsync("alert", "Failed to update status. Please try again.");
        }
    }
}
