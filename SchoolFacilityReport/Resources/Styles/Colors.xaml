<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- SOFT MODERN CLEAN THEME (User Friendly & Professional) -->
    
    <!-- Brand Colors -->
    <Color x:Key="Primary">#4F46E5</Color>      <!-- Indigo 600 - Trustworthy & Vibrant -->
    <Color x:Key="PrimarySoft">#818CF8</Color>   <!-- Indigo 400 -->
    <Color x:Key="Accent">#10B981</Color>        <!-- Emerald 500 - Positive Action -->
    <Color x:Key="AccentSoft">#D1FAE5</Color>    <!-- Emerald 100 -->

    <!-- Backgrounds -->
    <Color x:Key="PageBackground">#F3F4F6</Color> <!-- Cool Gray 100 - Soft on eyes -->
    <Color x:Key="Surface">#FFFFFF</Color>        <!-- Pure White Cards -->
    <Color x:Key="SurfaceAlt">#F9FAFB</Color>     <!-- Gray 50 -->
    <Color x:Key="SurfaceLight">#F3F4F6</Color>   <!-- For Inputs/secondary backgrounds -->

    <!-- Text -->
    <Color x:Key="TextPrimary">#111827</Color>    <!-- Gray 900 - Max Readability -->
    <Color x:Key="TextSecondary">#6B7280</Color>  <!-- Gray 500 -->
    <Color x:Key="TextInverse">#FFFFFF</Color>
    <Color x:Key="TextAccent">#4F46E5</Color>

    <!-- UI State Colors (Friendly Pastels) -->
    <Color x:Key="Success">#34D399</Color>
    <Color x:Key="Warning">#FBBF24</Color>
    <Color x:Key="Error">#F87171</Color>
    <Color x:Key="Info">#60A5FA</Color>

    <!-- Legacy Compatibility -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Gray100">#F3F4F6</Color>
    <Color x:Key="Gray200">#E5E7EB</Color>
    <Color x:Key="Gray300">#D1D5DB</Color>
    <Color x:Key="Gray400">#9CA3AF</Color>
    <Color x:Key="Gray500">#6B7280</Color>
    <Color x:Key="Gray600">#4B5563</Color>
    <Color x:Key="Gray900">#111827</Color>
    <Color x:Key="Gray950">#030712</Color>
    
    <Color x:Key="Transparent">Transparent</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource PageBackground}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}"/>
</ResourceDictionary>